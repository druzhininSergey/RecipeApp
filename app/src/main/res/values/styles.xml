<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="StyleCard" parent="CardView">
        <item name="android:background">@color/white</item>
        <item name="android:clickable">true</item>
        <item name="cardCornerRadius">@dimen/main_corner_radius</item>
        <item name="cardElevation">@dimen/card_elevation</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <style name="StyleRecipeDescription12" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/description_text_color</item>
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="StyleTitle20" parent="TextAppearance.AppCompat">
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/montserrat_alternates_semi_bold</item>
        <item name="textAllCaps">true</item>
        <item name="android:textColor">@color/title_color</item>
    </style>

    <style name="StyleTitle14" parent="TextAppearance.AppCompat">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/montserrat_alternates_semi_bold</item>
        <item name="textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="StyleNavButton" parent="Widget.Material3.Button">
        <item name="cornerRadius">@dimen/main_corner_radius</item>
        <item name="android:textAppearance">@style/StyleTitle14</item>
        <item name="android:paddingVertical">10dp</item>
        <item name="android:paddingHorizontal">0dp</item>
    </style>

    <style name="StyleRecipeDescription14" parent="TextAppearance.AppCompat">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/montserrat_regular</item>
        <item name="android:textColor">@color/description_text_color</item>
    </style>

    <style name="StylePortions16" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/portions_text_color</item>
        <item name="fontFamily">@font/montserrat_semi_bold</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>