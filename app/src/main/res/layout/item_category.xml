<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/main_margin_half"
    android:layout_marginTop="@dimen/main_margin_half"
    android:background="@color/white"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="8dp"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivCategory"
            android:layout_width="match_parent"
            android:layout_height="@dimen/category_image_height"
            android:contentDescription="@string/category_image"
            android:scaleType="centerCrop"
            tools:background="@color/cardview_dark_background" />

        <TextView
            android:id="@+id/tvCategories"
            style="@style/StyleTitle14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/main_margin_half"
            android:layout_marginTop="@dimen/main_margin_half"
            android:textColor="@color/title_color"
            tools:text="Вид блюда" />

        <TextView
            android:id="@+id/tvCategoriesDescription"
            style="@style/RecipeDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/main_margin_half"
            android:layout_marginVertical="@dimen/main_margin_half"
            tools:text="Описание" />

    </LinearLayout>

</androidx.cardview.widget.CardView>